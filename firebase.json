{
    "functions": {
        "source": "functions",
        "codebase": "default",
        "ignore": [
            "node_modules",
            ".git",
            "firebase-debug.log",
            "firebase-debug.*.log"
        ]
    },
    "storage": {
        "rules": "storage.rules"
    },
    "hosting": {
        "public": "public_html",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/form",
                "destination": "/form/index.html"
            },
            {
                "source": "/form/secondhand",
                "destination": "/form/secondhand/index.html"
            },
            {
                "source": "/form/jobs",
                "destination": "/form/jobs/index.html"
            },
            {
                "source": "/form/realestate",
                "destination": "/form/realestate/index.html"
            }
        ]
    }
}